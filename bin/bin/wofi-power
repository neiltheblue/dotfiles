#!/bin/bash

THIS=$0

case $1 in

  'shutdown') systemctl powseroff
    ;;

  'reboot') systemctl reboot
    ;;

  'lock') swaylock -f -c000000 -i ${HOME}/.config/sway/lock.png
    ;;

  'logout') swaymsg exit
    ;;

  'suspend') systemctl suspend
    ;;

  'hibernate') systemctl hibernate
    ;;

  '-a') 
     echo "lock"
     echo "logout"
     echo "reboot"
     echo "suspend"
     echo "hibernate"
     echo "shutdown" 
    ;;

  '-show') ${THIS} $(${THIS} -a | /usr/bin/wofi -dw1)
  
 esac
